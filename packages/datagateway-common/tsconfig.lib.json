{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./lib",
    "sourceMap": true,
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "noUnusedLocals": false,
    "noEmit": false,
    "isolatedModules": false,
    "allowImportingTsExtensions": false,
  },
  "exclude": [
    "lib",
    "node_modules",
    "dist",
    "__mocks__",
    "coverage",
    "**/?*test.*",
    "src/setupTests.tsx",
    "src/testUtils.tsx"
  ],
  "include": ["src"]
}
