{
  "name": "datagateway",
  "private": true,
  "version": "1.1.0",
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "husky": "8.0.1"
  },
  "scripts": {
    "build": "yarn workspaces foreach --interlaced --verbose --parallel --jobs 3 --exclude datagateway-common run build",
    "lint": "yarn workspaces foreach --interlaced --verbose --parallel --jobs 4 run lint:js --max-warnings=0",
    "tsc": "yarn workspace datagateway-common tsc",
    "test": "yarn test:unit && yarn test:e2e",
    "test:unit": "yarn workspaces foreach --interlaced --verbose --parallel --jobs 1 --exclude datagateway run test",
    "test:e2e": "yarn workspaces foreach --interlaced --verbose --parallel --jobs 4 run e2e",
    "datagateway-dataview": "cd packages/datagateway-dataview && yarn start",
    "datagateway-download": "cd packages/datagateway-download && yarn start",
    "datagateway-search": "cd packages/datagateway-search && yarn start",
    "postinstall": "husky install"
  },
  "packageManager": "yarn@3.2.0"
}
